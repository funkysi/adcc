#tagcloud {
    width: 230px;
    padding: 10px;
    text-align:center;
	margin-bottom:10px;
	float:left;
}
#usercloud {
    width: 760px;
    padding: 10px;
    text-align:center;
	margin-bottom:10px;
	
}
#tagcloud a:link, #tagcloud a:visited {
    text-decoration:none;
}

#tagcloud a:hover, #tagcloud a:active {
    text-decoration: underline;
    color: #000;
}

#tagcloud span {
    padding: 1px;
}

.tag-10 {
    font-size: 0px;
}

.tag-20 {
    font-size: 4px;
}
.tag-30 {
    font-size: 8px;
}
.tag-40 {
    font-size: 12px;
}
.tag-50 {
    font-size: 16px;
}
.tag-60 {
    font-size: 20px;
}
.tag-70 {
    font-size: 24px;
}
.tag-80 {
    font-size: 28px;
}
.tag-90 {
    font-size: 32px;
}
.tag-100 {
    font-size: 36px;
}
.tag-hide {
	display:none;
}